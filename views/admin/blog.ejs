<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <%- include ( './partials/head.ejs' )%>

  </head>
<body>
  <%- include ( './partials/navbar.ejs' )%>
  <script>
    var element = document.getElementById("blog-nav");
    element.classList.add("active");
  </script>
  
  <main id="main">
    <!-- ======= Hotels Section ======= -->
    <section id="blog" class="section-with-bg">
      <div class="breadcrumb">
          <div class="container-fluid">
            <i class="fa fa-angle-right fa-lg"></i>&nbsp;
            <a href="dashboard" >Dashboard</a>
            <i class="fa fa-angle-right fa-lg"></i>&nbsp;
            <span>Post Blog</span>
          </div>
      </div>

      <div class="container-fluid" data-aos="fade-up">

        <div class="row">
          <div class="col-md-9 border-right border-top" style="padding: 20px ; display: inline-flex;">
            
            <div class="container">

              <div class="breadcrumb">
                <div class="container-fluid">
                  <div style="text-align: center;"><h4>ADD BLOG</h4></div>
                </div>
              </div>
            <!-- Form -->
              <form action="/uploadblog" method="POST" enctype="multipart/form-data" style="padding-bottom: 50px;">
                <div class="form-group row">
                  <label for="image"  class="col-sm-2 col-form-label">Upload Image (optional)</label>
                  <div class="col-sm-10">
                    <input type="file" name="myBlog" accept="image/*" class="form-control-file" id="blogImage">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="title" class="col-sm-2 col-form-label">Title</label>
                  <div class="col-sm-10">
                    <input type="text" name="title" class="form-control" id="title" placeholder="Title">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="category" class="col-sm-2 col-form-label">Category</label>
                  <div class="col-sm-10">
                    <select type="text" name="category" class="form-control" id="category">
                      <option value="">Choose...</option>
                      <option value="hotel">Hotels & Restaurants</option>
                      <option value="club">Clubs</option>
                      <option value="outdoor">Outdoor Events</option>
                      <option value="church">Churches</option>
                      <option value="dj">DJs</option>
                      <option value="artist">Artists</option>
                      <option value="conference">Conference</option>
                    </select>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="author" class="col-sm-2 col-form-label">Author</label>
                  <div class="col-sm-10">
                    <input type="text" name="author" class="form-control" id="author" placeholder="Author">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="description" class="col-sm-2 col-form-label">Blog</label>
                  <div class="col-sm-10">
                    <textarea type="text" name="content" rows="10" class="form-control" id="description" placeholder="Write something about it.."></textarea>
                  </div>
                </div>
                <div class="form-group" style="text-align: right;">
                    <input type="submit" class="btn btn-success" value="Post">
                </div>

                <hr>

              </form>

              <h4 style="text-align: center;">Blogs</h4>
              <table class="table table-hover table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Created</th>
                    <th scope="col">Author</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% allBlogs.forEach(function(blog) { %>
                      <tr>
                        <th scope="row">1</th>
                        <td><%= blog.title %></td>
                        <td><%= blog.date %></td>
                        <td><%= blog.author %></td>
                        <td><a href="/admin/blog/<%= blog._id %>/edit-blog" class="btn btn-secondary">edit</a></td>
                        <td><a href="/admin/blog/<%= blog._id %>/delete-blog" class="btn btn-danger">Delete</a></td>
                      </tr>
                  <% }); %>
                </tbody>
              </table>

            </div>

          </div>
          <div class="col-md-3 border-top" style="padding: 20px;">
              <div class="list-group">
                <a href="dashboard" class="list-group-item list-group-item-action">Dashboard</a>
                <a href="add-event" class="list-group-item list-group-item-action">Add Event</a>
                <a href="manage-events" class="list-group-item list-group-item-action">Manage Event</a>
                <a href="blog" class="list-group-item list-group-item-action active">Blogs</a>
                <a href="notifications" class="list-group-item list-group-item-action">Notifications</a>
                <a href="/logout" class="list-group-item list-group-item-action">Log Out</a>
              </div>
          </div>
        </div>

      </div>
  
    </section>
    <!-- End Hotels Section -->


  <!-- ======= Footer ======= -->
  <footer id="footer">

    <div class="container">
      <div class="copyright">
        <!-- &copy; Copyright <strong>TheEvent</strong>. All Rights Reserved -->
      </div>
      <div class="credits">
        Designed by <a href="https://nspace.co.ke/" style="font-weight: \600; text-decoration: none; color: white;">NSpace</a>
      </div>
    </div>
  </footer>
  <!-- End  Footer -->

  </main>
  <!-- End #main -->


  <script src="assets/js/bootstrap.min.js"></script>
  <script src="assets/js/bootstrap.js"></script>
  <script src="assets/js/main.js"></script>
  <script src="assets/js/jquery.1.8.3.min.js"></script>
  <script src="assets/vendor/venobox/venobox.min.js"></script>
  <script src="assets/vendor/owl.carousel/owl.carousel.min.js"></script>
  <script src="assets/js/bootstrap.bundle.min.js"></script>

